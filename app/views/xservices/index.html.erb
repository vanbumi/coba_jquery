<p id="notice"><%= notice %></p>

<h1>Listing Xservices</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @xservices.each do |xservice| %>
      <tr>
        <td><%= xservice.name %></td>
        <td><%= link_to 'Show', xservice %></td>
        <td><%= link_to 'Edit', edit_xservice_path(xservice) %></td>
        <td><%= link_to 'Destroy', xservice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

